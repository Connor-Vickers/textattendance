<!DOCTYPE html>
<html>
<head>
  <title>Attendanceninja</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  </head>
<body>

<%= nav_bar :static => :top, :responsive => true do %>
  <%= menu_group do %>
    <h2><%= render_breadcrumbs('>') %></h2>
  <% end %>
	<%= menu_group :pull => :right do %>
    <% if get_user %>
      Logged in as <%= get_user.email %>&nbsp
      <a class="btn btn-default navbar-btn", href="<%= sign_out_path %>">Sign Out</a>
    <% else %>
      <%= menu_item "Sign up", sign_up_path %> or
      <%= menu_item "log in", sign_in_path %>
    <% end %>
	<% end %>
<% end %>
  
<div class="container">
  <%= yield %>
</div>
  
</body>
</html>
