<%= form_for [@course, @meeting], :html => { :class => "form-horizontal meeting" } do |f| %>

    <% if @meeting.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @meeting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, 'Name of Meeting' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@meeting[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :when, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :when, class: 'form-control', autocomplete: "off" %>
    </div>
    <%= error_span(@meeting[:when]) %>
  </div>

  <br>
  
  <% if @take_attendance %>
    <%= f.submit "Take Attendance", :class => 'btn btn-success' %>
  <% else %>
    <%= f.submit nil, :class => 'btn btn-primary' %>
  <% end %>
  <a class="btn btn-default" href="<%= course_path(@course) %>">Cancel</a>

<% end %>




<script>
  $('#meeting_when').datetimepicker({
    closeOnDateSelect:true,
	validateOnBlur:true
  });
</script>
