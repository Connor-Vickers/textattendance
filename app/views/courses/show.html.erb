<p id="notice"><%= notice %></p>

<p>
  <strong>name:</strong>
  <%= @course.name %>
</p>

<%= link_to 'New Meeting', new_course_meeting_path(@course)%>

<table>
  <thead>
    <tr>
      <th>meetings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course.meetings.each do |meeting| %>
      <tr>
        <td><%= meetings.name %></td>
		<td><%= meetings.when %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
